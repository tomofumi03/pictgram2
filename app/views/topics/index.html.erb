<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id),method: :post do %>
                <i class="far fa-heart like-btn"></i>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id),method: :delete do %>
              <i class="fas fa-heart unlike-btn"></i>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>

          </div>
          <div class="comment-wrapper border-top md-10">
            <p class="mt-5">コメント一覧</p>
            <% @comments.each do |c| %>
              <div>
                <% unless c.user.blank? %>
                  <a href="<%= user_path(c.user_id) %>"><%= image_tag c.user.image.to_s,
                  class:"rounded-circle icon_image mr-3 mb-3"%></a>
                <% end %>
                <%= c.user.username unless c.user.blank? %>
                <br />
                <%= c.content %>
              </div>
              <br />
            <% end %>
            <%= form_for @comment do |f| %>
              <div class="form-group">
                <%= f.label :Comment, class: "text-black" %>
                <%= f.file_field :text %>
              </div>
              <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
