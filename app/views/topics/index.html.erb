<div class="topic-index-wrapper">
  <div class="container">
     <% #binding.pry %>
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
              <% #binding.pry %>
              <% if !topic.favorite_users.include?(current_user) %>
                <%= link_to favorites_path(topic_id: topic.id),method: :post do %>
                  <i class="far fa-heart like-btn"></i>
                <% end %>
              <% else %>
                <%= link_to favorites_path(topic_id: topic.id),method: :delete do %>
                <i class="fas fa-heart unlike-btn"></i>
                <% end %>
              <% end %>
            <%= topic.favorite_users.count %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>

          </div>
          <div class="comment-wrapper border-top md-10">
            <p class="mt-5">コメント一覧</p>
              <% #binding.pry %>
              <% Comment.where(topic_id: topic.id).each do |c| %>
              <% end %>
              <% link_to topic_comments_path(topic_id: topic.id),method: :post do %>
                <%= form_for @comment do |c| %>
                  <% f.hidden_field :user_id, value: params[:user_id] %>
                  <% f.hidden_field :topic_id, value: params[:topic_id] %>
                  <div class="form-group">
                    <%= f.label :coment, class: "text-white" %>
                    <%= f.file_field :text %>
                  </div>
                  <%= f.submit 'コメントする', class: 'btn btn-white btn-block' %>
                <% end %>
              <% end %>


          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
